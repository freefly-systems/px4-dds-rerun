{
    "name": "ROS 2 Dev Container",
    "dockerComposeFile": "docker-compose.yaml",
    "service": "humble",
    "workspaceFolder": "/ws",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "remoteUser": "dev",
    "postCreateCommand": "sudo chown -R $(whoami) /ws",
    "mounts": [
        "source=${localEnv:HOME}/.gitconfig,target=/home/dev/.gitconfig,type=bind,consistency=cached"
    ]
}